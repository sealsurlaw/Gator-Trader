  <!-- Left-aligned media object -->
  {{#if data}}
  {{#each data}}
  <div class="media">
    <div class="media-left">
      <img src="{{this.item_image_thumbnail}}" class="media-object" style="width:200px">
    </div>
    <div class="media-body">
      <h3 class="media-heading">Item Name: {{this.item_title}}</h3>
      {{!-- <h4>Category: </h4> --}}
      <h4>Price: {{this.item_price}}</h4>
      <br>
      <br>
      <br>
      <button type="button" onclick="window.open('/item/{{this.item_id}}', '_blank')">View Details</button>
      <button type="button" class="btn btn-warning">Contact Seller</button>
    </div>
  </div>
  <hr>
  {{/each}}
  {{/if}}
