<!-- Navigation Bar w/ Register + Login -->
<nav class="navbar navbar-inverse">

  <div class="container-fluid">
    <div class="navbar-header">

      <!-- Name / Logo -->

      <a href="/home" style="text-decoration:none;"><h1 style="color:#fff;"><br>Gator Trader</h1></a>

      <!-- "All" Dropdown -->
      <div class="dropdown">
        <font size="3"><p style="color:#fff">SFSU-Fulda Software Engineering Project CSC 648-848, Fall 2018. For Demonstration Only.</p></font>
        <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" style="background-color:#FFD363;">All
          <span class="caret"></span></button>
          <ul class="dropdown-menu">
              <li><a href="/search?browse=-1">All Categories</a></li>
            {{#each categories}}
            <li><a href="/search?browse={{this.category_id}}">{{this.category_name}}</a></li>
            {{/each}}
          </ul>
        </div>


        <!-- Search Bar -->

        <div class="container">

          <form action="/search">
            <div class="input-group">
              <input type="text" class="form-control" pattern="[A-Za-z0-9\s]+" maxlength="40" placeholder="Search" name="search" value="{{data.search}}">
              <!-- Search Bar Button -->
              <div class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
              </div>
            </div>
          </form>
        </div>
        {{!-- {{/if}} --}}

      </div>

      <!-- Login / Register Buttons -->
      {{#if username}}
      <ul class="nav navbar-nav navbar-right" style="display: inline-block;">
        <li><a href="#"style="color:white;"><span class="glyphicon glyphicon-user"></span> Hello, {{username}}</a></li>
        <li><a href="/clear"style="color:white;"><span class="glyphicon glyphicon-log-out"></span> Log Out</a></li>
        <li><a href="/dashboard"style="color:white;">My Dashboard</a></li>
      </ul>
      {{else}}
      <ul class="nav navbar-nav navbar-right">
        <li><a href="/register"style="color:white;"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
        <li><a href="/login" style="color:white;"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
      </ul>
      {{/if}}
    </div>
  </nav>

  <!-- Navigation Bar w/ Categories -->
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>

      <div class="collapse navbar-collapse" id="myNavbar">

        <ul class="nav navbar-nav navbar-right">
          <li><button type="button" class="btn btn-primary btn-lg" onclick="location.href='/index/';" style="background-color:#FFD363; color:black;">About Us</button></li>
          <li><button type="button" class="btn btn-primary btn-lg" onclick="location.href='/post/';" style="background-color:#FFD363; color:black;margin-left:20px;">Sell An Item</button></li>
        </ul>
      </div>
    </div>
  </nav>
